<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="true"
        android:key="GESTURE_ENABLE"
        android:title="@string/ui_gesture_enable"
        android:summaryOn="@string/ui_gesture_enabled"
        android:summaryOff="@string/ui_gesture_disabled"
        />

    <Preference
        android:key="pref_ROOT"
        android:title="@string/ui_root_title"
        android:summary="@string/ui_root_help"
        />

    <PreferenceCategory
        android:title="@string/ui_sensor_actions"
        android:key="SENSOR_GROUP"
        >
        <ru.vpro.kernelgesture.GestureSwitchPreference
            android:defaultValue="true"
            android:key="KEY_PROXIMITY"
            android:title="@string/ui_proximity_gesture"
            />
    </PreferenceCategory>

    <Preference
        android:key="TOUCH_PREFERENCE"
        android:title="@string/ui_use_gesture"
        android:summary="@string/ui_touchscreen_summ"
        />

    <Preference
        android:key="KEY_PREFERENCE"
        android:title="@string/ui_key_actions"
        android:summary="@string/ui_key_summ"
        />

    <PreferenceCategory
        android:title="@string/ui_adv_settings"
        android:key="GESTURE_GROUP_ADD"
        >
        <ru.vpro.kernelgesture.GestureSwitchPreference
            android:defaultValue="false"
            android:key="GESTURE_DEFAULT_ACTION"
            android:title="@string/ui_default_action"
            />
    </PreferenceCategory>

    <SwitchPreference
        android:defaultValue="true"
        android:key="GESTURE_PROXIMITY"
        android:title="@string/ui_proximity_use"
        android:summaryOff="@string/ui_proximity_off"
        android:summaryOn="@string/ui_proximity_on"
        />
    <SwitchPreference
        android:defaultValue="true"
        android:key="GESTURE_VIBRATION"
        android:title="@string/ui_vibrate"
        android:summaryOff="@string/ui_vibrate_off"
        android:summaryOn="@string/ui_vibrate_on"
        />
    <SwitchPreference
        android:defaultValue="true"
        android:key="GESTURE_UNLOCK_SCREEN"
        android:title="@string/ui_unlock_screen"
        android:summaryOff="@string/ui_unlock_screen_off"
        android:summaryOn="@string/ui_unlock_screen_on"
        />
    <RingtonePreference
        android:title="@string/ui_notify"
        android:key="GESTURE_NOTIFY"
        android:ringtoneType="notification"
        />

</PreferenceScreen>
